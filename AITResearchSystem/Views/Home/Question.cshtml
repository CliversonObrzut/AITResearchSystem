@model QuestionViewModel

@{
    ViewData["Title"] = "Question";
}

<div class="container container-main">
    <form method="post">
        <div class="jumbotron">
            @Html.HiddenFor(m => m.Order)
            @Html.HiddenFor(m => m.Type)
            <h2 class="question-background">@Model.QuestionNumber</h2>
            <p id="question-text">@Model.Text<br></p>
            @if (@Model.Order == 4)
            {
                <input class="form-control" type="text" placeholder="Suburb">
                <input class="form-control" type="text" placeholder="Post Code"/>
            }
            @if (@Model.Order == 5)
            {
                <input class="form-control" type="text" placeholder="Email">
            }
            @if (@Model.Order != 4 && @Model.Order != 5)
            {
                <ul>
                    @foreach (var option in Model.Options)
                    {
                        <li><input type="radio">@option.Text</li>
                    }
                </ul>
            }
            <p id="start-register-buttons">
                @if (@Model.Order != 1)
                {
                    <button class="btn btn-default btn-lg btn-previous" type="submit">
                        <i class="glyphicon glyphicon-arrow-left"></i>Previous
                    </button>
                }
                <button class="btn btn-default btn-lg btn-next" type="submit">Next
                    <i class="glyphicon glyphicon-arrow-right"></i>
                </button>
            </p>
        </div>
    </form>
</div>