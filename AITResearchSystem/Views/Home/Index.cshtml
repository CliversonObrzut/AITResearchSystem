@{
    ViewData["Title"] = "Welcome";
}

<div class="container container-main">
    <div class="jumbotron">
        <h2 id="index-page-h2">AIT RESEARCH QUESTIONAIRE</h2>
        <p id="index-page-p">
            You are about to answer a market research about people habits such as newspaper read, travel preferences, favourite sports, bank used, etc, including some personal details such as age range, email address, home territory, suburb and postcode.
            You can answer as a visitor (anonymously) or a registered person. A registered person will also provide name, date of birth and phone number.<br>
        </p>
        <p id="start-register-buttons">
            <a asp-controller="Home" asp-action="StartAnonymously" class="btn btn-default btn-lg" role="button">Answer Anonymously</a>
            <a asp-controller="Home" asp-action="Register" class="btn btn-default btn-lg" role="button">Register First</a>
        </p>
    </div>
</div>
